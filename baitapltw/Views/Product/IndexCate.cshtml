@model IEnumerable<baitapltw.Models.Product>

@{
    ViewBag.Title = "IndexCate";
    Layout = "~/Views/Shared/_Layout_ShopGiay.cshtml";
}

<div class="container-fluid pb-4 pt-4 paddding">
    <div class="container paddding">
        <div class="row mx-0">
            <div class="col-md-8 animate-box" data-animate-effect="fadeInLeft">
                <div>
                    <div class="fh5co_heading fh5co_heading_border_bottom py-2 mb-4">News</div>
                </div>
                <div class="row pb-4">
                    @foreach (var item in Model)
                    {
                        if (item.ProductCateId == 4)
                        {
                            <div class="col-md-5">
                                <div class="fh5co_hover_news_img">
                                    <div class="fh5co_news_img"><img src="@item.FeatureImage" alt="" /></div>
                                    <div></div>
                                </div>
                            </div>
                            <div class="col-md-7 animate-box">
                                <a href="/Product/Details/@item.Id" class="fh5co_magna py-2">
                                    @item.Title
                                </a> @*<a href="#" class="fh5co_mini_time py-3">
                                        Thomson Smith -
                                        April 18,2016
                                    </a>*@
                                <div class="fh5co_consectetur">
                                    @item.Des
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>